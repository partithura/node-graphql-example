{
  "ignore": [
    "*.test.*",
    "dist/**",
    "node_modules/**",
    "coverage/**",
    ".git/**",
    ".yarn/**"
  ],
  "execMap": {
    "mts": "ts-node -r dotenv/config --esm"
  },
  "ext": ".ts,.json,.graphql,.gql,.js",
  "watch": ["src/**", "schemas/**"],
  "env": {
    "NODE_ENV": "development"
  }
}
